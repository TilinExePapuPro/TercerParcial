<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.tercerparcial.arbolbin.ArbolController"
            prefWidth="600" prefHeight="500">

   <children>
      <Label text="Árbol de Expresión Matemática" layoutX="180" layoutY="20"
             style="-fx-font-size: 18; -fx-font-weight: bold;" />

      <TextField fx:id="campoTexto" layoutX="100" layoutY="60" prefWidth="400"/>

      <Button text="Dibujar Árbol" layoutX="180" layoutY="100" prefWidth="100"
              onAction="#presionarBotonDibujar"/>
      <Button text="Evaluar" layoutX="320" layoutY="100" prefWidth="100"
              onAction="#presionarBotonEvaluar"/>

      <Pane fx:id="arbolPanel" layoutX="50" layoutY="160" prefWidth="500" prefHeight="300"
            style="-fx-background-color: #f5f5f5; -fx-border-color: #ccc;"/>
   </children>
</AnchorPane>
